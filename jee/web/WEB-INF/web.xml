<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Ubercool webapp</display-name>

    <servlet>
        <servlet-name>indexServlet</servlet-name>
        <servlet-class>servlet.FirstServlet</servlet-class>
        <init-param>
            <param-name>iparam1</param-name>
            <param-value>Init param value</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>indexServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>cparam</param-name>
        <param-value>${CATALINA_HOME}</param-value>
    </context-param>


    <servlet>
        <servlet-name>old_style</servlet-name>
        <jsp-file>/old_style.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>old_style</servlet-name>
        <url-pattern>/old_style</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>new_style</servlet-name>
        <jsp-file>/new_style.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>new_style</servlet-name>
        <url-pattern>/new_style</url-pattern>
    </servlet-mapping>
</web-app>