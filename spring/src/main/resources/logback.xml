<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %cyan(%msg%n)</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT_BLUE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %blue(%msg%n)</pattern>
        </encoder>
    </appender>

    <logger name="com.spittr" level="trace" additivity="false">
        <appender-ref ref="STDOUT_BLUE"/>
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>